function _ilr_find_class_price() {
  $query = new EntityFieldQuery();
  $query->entityCondition('entity_type', 'node')
    ->entityCondition('bundle', 'sdc_course');
  $results = $query->execute();
  foreach (array_keys($results['node']) as $course_nid) {
    $course_wrapper = entity_metadata_wrapper('node', $course_nid);
    $course_price = $course_wrapper->field_price->value();
