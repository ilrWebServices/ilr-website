      'template' => 'student-services-contact-form-admin',
    ),
    'career_services_contact_form' => $base + array(
      'template' => 'career-services-contact-form',
    ),
    'career_services_contact_form_admin' => $base + array(
      'template' => 'career-services-contact-form-admin',
    ),
    'faculty_request_for_ta_or_ra' => $base + array(
      'template' => 'faculty-request-for-ta-or-ra',
    ),
    'faculty_request_for_ta_or_ra_admin' => $base + array(
      'template' => 'faculty-request-for-ta-or-ra-admin',
    ),
    'graduate_student_request_for_tea' => $base + array(
      'template' => 'graduate-student-request-for-tea',
