function _forms_get_course_admin_email_addresses($entityform, $course) {
  $admin_emails = [];
  $course_wrapper = ilr_get_node_wrapper($course);
  if (isset($course_wrapper->field_email) && !empty($course_wrapper->field_email->value())) {
    $admin_emails[] = $course_wrapper->field_email->value();
  } else {
    foreach ($course_wrapper->field_course_sponsor_reference->getIterator() as $delta => $term_wrapper) {
      if ($email = $term_wrapper->field_email->value()) {
        $admin_emails[] = $email;
      }
