  $payment_gift_details .= '<strong><em>This email serves as reciept of your gift.</em></strong>';

  _forms_send_emails($entityform, $admin_email, $admin_subject, $user_subject, array(
    'payment_gift_details' => $payment_gift_details,
    'registrant_type' => $entityform_wrapper->field_registrant_type->value()));
