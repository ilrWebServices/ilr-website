#!/bin/bash

# check running from docroot
CURRENT_DIR=${PWD##*/}
if [ ! "$CURRENT_DIR" = "docroot" ]; then
  echo 'Please be sure that you are running this command from the docroot.'
  exit 2
fi

BIN_DIR=`dirname $0`

# Set the backup name
source $BIN_DIR/snapshot

drush sql-drop -y

# download the acquia dev db
drush sql-sync @ilr.live @ilr.ilr.local --sanitize --sanitize-password=password --structure-tables-list=cache,cache_*,sessions,entityform,freedompay_*,redhen_* -y

drush cc all

drush en ilr_dev -y

echo "Sync complete."
